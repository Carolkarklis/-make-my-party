<div class="form-mmp">
  <h2>Novo item</h2>
  <%= simple_form_for @item do |f| %>
    <div class="form-mmp-field">
      <%= f.input :product_name, label: "Nome do item" %>
    </div>
    <div class="form-mmp-field">
      <%= f.input :description, label: "Descrição", as: :text %>
    </div>
    <div class="form-mmp-field">
      <%= f.input :price, label: "Preço do aluguel/dia" %>
    </div>
    <div class="form-mmp-field">
      <%= f.input :picture, label: "Adcione uma foto" %>
      <%= f.input :picture_cache, as: :hidden %>
    </div>
    <button type="submit"> Criar</button>
  <% end %>
</div>
